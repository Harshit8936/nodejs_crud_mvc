
<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Edit User (<%=user.name %>)</h3>
                </div>
                <div class="card-body p-4">
            <form action="/updateUser/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                <div class="form-group mb-3">
                  <label for="name">Name</label>
                  <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" autocomplete="off" value="<%= user.name %>" required>
                </div>
                <div class="form-group mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" autocomplete="off" value="<%= user.email %>" required>
                  </div>
                  <div class="form-group mb-3">
                    <label for="phone">Phone</label>
                    <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter Phone" autocomplete="off" maxlength="10" value="<%= user.phone %>">
                  </div>
                  <div class="form-group mb-3">
                    <label for="image">Image</label>
                    <input type="file" class="form-control" id="image" name="image" placeholder="Select image">
                    <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1">
                  </div>
                  <input type="hidden" name="old_image" value="<%= user.image %>">
                
                  <div class="form-group mb-3 d-grid">
                <button type="submit" class="btn btn-primary" value="Update User">Submit</button>
                </div>
              </form>
            </div>
            </div>
        </div>
    </div>
</div>



<%- include('layout/footer') %>