<%- include('layout/header') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- <% if(message){  %>
                    <div class="alert alert-dismissable fade show alert- <%=message.type %>" role="alert"></div>
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                    <strong><%=message.message%></strong>
               <%  } %> -->
                <div class="table-responsive">
                    <% if(users != '') { %>
                        <table class="table table-stripped text-center">
                            <thead>
                                <tr class="table-dark">
                                    <th scope="col">ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(function(user,index) { %>
                                <tr class="align-middle">
                                    <td><%= index %></td>
                                    <td><%= user.name %></td>
                                    <td><%= user.email %></td>
                                    <td><%= user.phone %></td>
                                    <td><img src="<%= user.image %>" width="50" class="img-thumbnail" alt=""></td>
                                    <td>
                                        <a href="/edit/<%= user._id %>" class="text-success"><i class="fa-solid fa-pen-to-square"></i></a>
                                        <a href="/delete/<%= user._id %>" class="text-danger"><i class="fa-solid fa-trash"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                            <% }) %>
                        </table>
                    <% } else { %>
                        <h1 class="text-center text-secondary">No Users found in database</h1>
                 <% } %>
                   
                </div>
            </div>
        </div>
    </div>



    <%- include('layout/footer') %>